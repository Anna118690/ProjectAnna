{% extends 'base.html.twig' %}

{% block bg_light_title %}Langauge courses {% endblock %}
  
{% block content %}
<div class="site-section">
      <div class="container">

        <div class="row mb-5">
          <div class="col-md-9 order-2">

            <div class="row">
              <div class="col-md-12 mb-5">
                <div class="float-md-left mb-4"><h2 class="text-black h5">Book your course</h2></div>
                <div class="d-flex">
                  <div class="dropdown mr-1 ml-md-auto">
                    <button type="button" class="btn btn-secondary btn-sm dropdown-toggle" id="dropdownMenuOffset" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      Language
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuOffset">
                        {% for language in languages %}
                        <a class="dropdown-item" href="#">{{ language.language }}</a>
                        {% endfor %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="row mb-5">
                {% for course in courses %}
              <div class="col-sm-6 col-lg-4 mb-4" data-aos="fade-up">
                <div class="block-4 text-center border">
                  <figure class="block-4-image">
                    <a href="#" ></a><img src="{{ asset ('filesCourse/' ~ course.coursePhoto ) }}" alt="{{course.namecourse}}" class="img-fluid"></a>
                  </figure>
                  <div class="block-4-text p-4">
                    <h3><a href="/display/course">{{ course.namecourse}}</a></h3>
                    <p class="mb-0">{{ course.shortDesc}}</p>
                    <p class="text-primary font-weight-bold">{{ course.priceActualHour}}</p>
                  </div>
                </div>
              </div>
              {% endfor %}


            </div>
            
          </div>

    

          <div class="col-md-3 order-1 mb-5 mb-md-0">
            <div class="border p-4 rounded mb-4">
              <h3 class="mb-3 h6 text-uppercase text-black d-block">Language</h3>
              <ul class="list-unstyled mb-0">
                {% for language in languages %}
                <li class="mb-1"><a href="#" class="d-flex"><span>{{ language.language }}</span> <span class="text-black ml-auto">(2,220)</span></a></li>
                {% endfor %}
              </ul>
            </div>

            <div class="border p-4 rounded mb-4">
                <h3 class="mb-3 h6 text-uppercase text-black d-block">Level</h3>
                <ul class="list-unstyled mb-0">
                  {% for level in levels %}
                  <li class="mb-1"><a href="#" class="d-flex"><span>{{ level.level }}</span> <span class="text-black ml-auto">(2,220)</span></a></li>
                  {% endfor %}
                </ul>
              </div>

              <div class="border p-4 rounded mb-4">
                <h3 class="mb-3 h6 text-uppercase text-black d-block">Approach</h3>
                <ul class="list-unstyled mb-0">
                  {% for approach in approachs %}
                  <li class="mb-1"><a href="#" class="d-flex"><span>{{ approach.type }}</span> <span class="text-black ml-auto">(2,220)</span></a></li>
                  {% endfor %}
                </ul>
              </div>
              {{ knp_pagination_render(courses)}}
          </div>
        </div>

 
        
      </div>
    </div>
    
 {% endblock %}  