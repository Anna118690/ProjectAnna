{% extends 'base.html.twig' %}


{% block content %}
<div class="bg-light py-3">
  <div class="container">
    <div class="row">
      <div class="col-md-12 mb-0">
        <a href="{{ path ('index') }}">Home</a> 
        <span class="mx-2 mb-0">/</span> <strong class="text-black">Your order</strong>
      </div>
    </div>
  </div>
</div>

<div class="site-section">
    <div class="container">
      <div class="row mb-5">
        <form class="col-md-12" method="post">
          <div class="site-blocks-table">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th class="product-thumbnail">Image</th>
                  <th class="product-name">Course</th>
                  <th class="product-name">Teacher</th>
                  <th class="product-price">Price for 60min Euro</th>       
                  <th class="product-quantity">Date</th>
                  <th class="product-total">Time</th>
                </tr>
              </thead>
              <tbody> 
                <tr>
                  <td class="product-thumbnail"> <img src="{{ asset ('filesCourse/' ~ reservation.course.coursePhoto) }}" alt="{{reservation.course.namecourse}}"  class="img-fluid"></td>
                  <td class="product-name"><h2 class="h5 text-black">{{ reservation.course.namecourse}}</h2> </td>
                  <td>{{ reservation.course.user.firstname}} {{ reservation.course.user.lastname}}</td>  
                  <td>{{ reservation.course.priceActualHour}}</td>  
                  <td>{{ reservation.date|date("m/d/Y")}}</td>
                  <td>{{ reservation.time|date('H:i:s')}}</td>   
                </tr>       
              </tbody>
            </table>
          </div>
        </form>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="row mb-5">
          </div>
        </div>
        <div class="col-md-6 pl-5">
          <div class="row justify-content-end">
            <div class="col-md-7">
              <div class="row">
                <div class="col-md-12 text-right border-bottom mb-5">
                  <h3 class="text-black h4 text-uppercase">To pay</h3>
                </div>
              </div>
              
              <div class="row mb-5">
                <div class="col-md-6">
                 
                </div>
                <div class="col-md-6 text-right">
                  <strong class="text-black">{{ reservation.course.priceActualHour}}</strong>
                </div>
              </div>

              <div class="form-group">
                <p><a href="{{path('display-ordercourse',{'reservation':reservation.id})}}" class="buy-now btn btn-sm btn-primary">Confirm your order</a></p>
              </div>
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
{% endblock %}