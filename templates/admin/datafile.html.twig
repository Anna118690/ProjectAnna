{% extends 'admin/base.html.twig' %}
{% block mainadmin %}

<h2>My data files</h2>
<div class="table-responsive">
        
    <table class="table table-striped table-sm">
    <thead>
        <tr>
        <th>#</th>
        <th>Datafile name</th>
        <th>Course</th>
        <th>Level</th>
        <th>Exercices description</th>
        <th>Materials</th>
        
       
        </tr>
    </thead>
    <tbody>
        {% for dataFile in dataFiles %}
        <tr>

        <td>{{dataFile.id}}</td>
        <td>{{dataFile.name}}</td>
        <td>{{dataFile.course.namecourse}}</td>
        <td>{{dataFile.course.level}}</td>
        <td>{{dataFile.description}}</td>
        <td><a href="{{ asset('/filesData/' ~ dataFile.link)}}" alt="data">Download course materials</a></td>

        
        </tr>
    {% endfor %}
    </tbody>
    </table>
</div>



{% endblock %}

