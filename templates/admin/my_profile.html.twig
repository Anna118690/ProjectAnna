{% extends 'admin/base.html.twig' %}
{% block mainadmin %}

<h2>My profile </h2>
<div class="containerProfile">

    <div class="profile">

        <div class="profile-image">

            <img src="#" alt="Profile picture">

        </div>

        <div class="profile-user-settings">

            <h2 class="profile-user-name">Your Name</h2>
            <h2 class="profile-user-surname">Your Lastname</h2>
            <h2 class="profile-user-skype">Your Skype</h2>
            <h2 class="profile-user-skype">Your Telephone</h2>
        
            <button class="btn profile-settings-btn" aria-label="profile settings"><i class="far fa-comments"></i></button>

        

        </div>

        <div class="profile-stats">

            <ul>
                <li><span class="profile-stat-count">13</span> Number of scheduled hours of courses</li>
                <li><span class="profile-stat-count">25</span> Number of hours of courses completed</li>
      
            </ul>

        </div>

        <div class="profile-bio">

            <p><span class="profile-real-name">Hello </span> Great to see you again!</p>

        </div>

    </div>
    <!-- End of profile section -->

</div>

{% endblock %}
