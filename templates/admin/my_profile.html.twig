{% extends 'admin/base.html.twig' %}
{% block mainadmin %}

<h2>My profile </h2>
<div class="containerProfile">

    <div class="profile">

        <div class="profile-image">

            <img src="{{ asset('/files/' ~ profil.photo)}}" alt="Profile picture">

        </div>

        <div class="profile-user-settings">

            <h2 class="profile-user-name">Firstname : {{profil.firstname}}  </h2>
            <h2 class="profile-user-surname"> Lastname: {{profil.lastname}}</h2>
            <h2 class="profile-user-skype">Telephone: {{profil.telephone}}</h2>
            <h2 class="profile-user-skype">Skype: {{profil.skype}}</h2>
        </div>

        <div class="profile-stats">

            <ul>
                <li><span class="profile-stat-count">13</span> Number of scheduled hours of courses</li>
                <li><span class="profile-stat-count">25</span> Number of hours of courses completed</li>
      
            </ul>

        </div>

        <div class="profile-bio">

            <p><span class="profile-real-name">Hello {{profil.firstname}}  {{profil.lastname}} !</span> Great to see you again!</p>

        </div>

    </div>
    <!-- End of profile section -->

</div>

{% endblock %}
