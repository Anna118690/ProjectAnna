{% extends 'admin/base.html.twig' %}
{% block mainadmin %}

<h2>My courses </h2>
<div class="table-responsive">
        
    <table class="table table-striped table-sm">
    <thead>
        <tr>
        <th>#</th>
        <th>Name</th>
        <th>Short Desc</th>
        <th>Price VAT</th>
        <th>Price</th>
        <th>Language</th>
        <th>Level</th>
        <th>Approach</th>
        <th>Delete</th>
        
        </tr>
    </thead>
   
    <tbody>
        {% for course in courses %}
        <tr>
        <td>{{course.id}}</td>
        <td>{{ course.namecourse}}</td>
        <td>{{ course.shortDesc}}</td>
        <td>{{ course.priceActualHour}}</td>
        <td>{{ course.priceActualHourSansTVA}}</td>
        <td>{{ course.language}}</td>
        <td>{{ course.level}}</td>
        <td>{{ course.approach}}</td>
        <td><a href="#" onclick="return confirm('Are you sure?');"><i class="fas fa-trash"></i></a></td>
        </tr>
    {% endfor %}
    </tbody>
    </table>
</div>

{% endblock %}
