{% extends 'admin/base.html.twig' %}
{% block mainadmin %}

<h2>My courses </h2>
<div class="table-responsive">
        
    <table class="table table-striped table-sm">
    <thead>
        <tr>
        <th>#</th>
        <th>Photo</th>
        <th>Name</th>
        <th>Short Desc</th>
        <th>Price VAT</th>
        <th>Price</th>
        <th>Language</th>
        <th>Level</th>
        <th>Approach</th>
        <th>Teacher</th>
        <th>Update</th>
        <th>Delete</th>
        
        </tr>
    </thead>
   
    <tbody>
        {% for course in courses %}
        <tr>
        <td>{{course.id}}</td>
        <td><img class="mr-3" style="width: 70px; height:70px;" src={{ asset('/filesCourse/' ~ course.coursePhoto)}} alt="Generic placeholder image"></td>
        <td>{{ course.namecourse}}</td>
        <td>{{ course.shortDesc}}</td>
        <td>{{ course.priceActualHour}}</td>
        <td>{{ course.priceActualHourSansTVA}}</td>
        <td>{{ course.language}}</td>
        <td>{{ course.level}}</td>
        <td>{{ course.approach}}</td>
        <td>{{ course.user.lastname}}</td>
        <td><a href="/admin/su/updatecourse/{{course.id}}" onclick="update_course(event);"><i style="color:red;" class="fas fa-trash"></i>Update</a></td>
        <td><a href="/admin/su/deletecourse/{{course.id}}" onclick="delete_course(event);"><i style="color:red;" class="fas fa-trash"></i>Delete</a></td>
        </tr>
    {% endfor %}
    </tbody>
    </table>
</div>

<script>
    function delete_course(e)
    {
    confirm('Are you sure?');
    }
    function update_course(e)
    {
    confirm('Are you sure?');
    }
</script>

{% endblock %}

